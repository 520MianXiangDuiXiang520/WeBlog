  display: flex;
  padding-left: 20rpx;
  flex-direction: column;
  width: 100%;
  height: 100%;
  /* background-color: #00303f; */
}
.book_image{
  height: 312rpx;
  width:189rpx;
  float: left;
}
.book_text{
  display: flex;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-top: 20rpx;
  flex-direction: column;
}
.book_info{
  /* margin: 40rpx; */
  padding-top: 40rpx;
  
}
.book_name{
  font-size: 48rpx;
  /* color:#fff; */
  font-family: FZYaoti;
}
.book_introduction{
  font-size: 25rpx;
  /* color: #fff; */
  padding-top: 20rpx;
  font-family: KaiTi;
  border-bottom: 2rpx solid #ccc;
}
.article_time{
  font-size: 25rpx;
