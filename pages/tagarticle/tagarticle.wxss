  padding-top: 20rpx;
  padding-bottom: 10rpx;
  padding-left: 400rpx;
}
.more{
  text-align: center;
  color:#8f8f8f;
  font-size: 22rpx;
  margin: 10rpx;
}
.more image{
  height: 48rpx;
  width: 48rpx;
}
